@model List<Category>
@{
    ViewData["Title"] = "Category List";
}

<partial name="_NotificationPartial" />

<div class="container my-5">
    <div class="row align-items-center pb-3">
        <div class="col-md-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary btn-lg">
                <i class="fa-solid fa-plus"></i> Create New Category
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped shadow-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Category Name</th>
                    <th>Parent Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td style="color: @(item.ParentCategory == null ? "red" : "black")">
                            @(item.ParentCategory != null ? item.ParentCategory.Name : "N/A")
                        </td>
                        <td class="text-center">
                            <a asp-controller="Category" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-outline-info mx-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Custom Styles */
    .table th, .table td {
        vertical-align: middle; /* Center the text vertically */
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5; /* Light gray background on hover */
    }

    .btn-outline-info, .btn-outline-danger {
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-outline-info:hover {
            background-color: #17a2b8; /* Info button hover color */
            color: white;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545; /* Danger button hover color */
            color: white;
        }
</style>

<!-- Include Bootstrap CSS and Icons -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
