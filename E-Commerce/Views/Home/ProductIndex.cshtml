@model IEnumerable<Product>

<!-- Include Bootstrap CSS for styling -->

<div class="container py-4">
    <h2 class="text-center mb-5 font-weight-bold">Our Products</h2>
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <!-- Product Image with Link -->
                    <a asp-action="ProductItemIndex" asp-route-Id="@product.Id">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="height: 300px; object-fit: cover;" alt="@product.Name" />
                    </a>

                    <!-- Product Details -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-uppercase text-dark opacity-75">@product.Name</h5>
                        <p class="text-dark text-opacity-100">@product.Category?.Name</p>
                        <p class="text-dark text-opacity-75">
                            <span>@Html.Raw(@product.Description)</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

</style>
