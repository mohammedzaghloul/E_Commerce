@model IEnumerable<ProductItem>

<!-- Include Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<div class="container py-4">
    <h2 class="text-center mb-4 font-weight-bold text-primary">Explore Our Product Collection</h2>
    <div class="row justify-content-center">
        @foreach (var productItem in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <!-- Product Image with Link -->
                    <a asp-action="ProductItemDetails" asp-route-productId="@productItem.Id" class="text-decoration-none">
                        <img src="@productItem.ImageUrl" class="card-img-top img-fluid" style="height: 250px; object-fit: cover;" alt="@productItem.Product?.Name" />
                    </a>

                    <!-- Product Details -->
                    <div class="card-body p-3">
                        <h6 class="card-title text-uppercase text-dark font-weight-bold mb-1">@productItem.Product?.Name</h6>
                        <p class="text-secondary mb-2">@productItem.SKU</p>
                        <p class="text-success font-weight-bold mb-2">
                            @productItem.Price.ToString("C", new System.Globalization.CultureInfo("en-US"))
                        </p>

                       
                            <span class="badge badge-danger position-absolute" style="top: 10px; left: 10px;">Sale</span>
                       
                        <!-- Add to Cart Button -->
                        <a asp-action="ProductItemDetails" asp-controller="Home" asp-route-ProductId="@productItem.Id" class="btn btn-outline-primary btn-sm w-100 mt-2">
                            Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

